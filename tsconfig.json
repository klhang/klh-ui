{
    "compilerOptions": {
        "declaration": true,
        "baseUrl": ".",
        // "outDir": "./dist/",
        // "module": "esnext",
        "module": "es6",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        // "allowJs": true
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts",
        "*.js"
    ]
}